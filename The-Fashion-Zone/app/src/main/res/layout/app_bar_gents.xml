<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gents">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/gents"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="396dp"
                android:layout_height="182dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/gents"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/mensshirt" />

                <Button
                    android:id="@+id/ladies"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shirt4" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="396dp"
                android:layout_height="182dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/button91"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/trouser" />

                <Button
                    android:id="@+id/button90"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shorts" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="396dp"
                android:layout_height="182dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/button88"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shirt3" />

                <Button
                    android:id="@+id/button89"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/mensshirt" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="396dp"
                android:layout_height="182dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/button85"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/mensshirt" />

                <Button
                    android:id="@+id/button87"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/mensshirt" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>