<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ebebe0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Payment1"
    tools:showIn="@layout/app_bar_payment1">

    <!-- layout1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnP1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="#FFFF"
            android:text="Add a new address"
            android:textAlignment="gravity"
            android:textColor="#0039e6" />
    </LinearLayout>

    <!-- layout2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"></LinearLayout>

        <!-- button2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="1">

            <Button
                android:id="@+id/btnP2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"></LinearLayout>

        <!-- button2 -->
        <LinearLayout
            android:background="#FFFF"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="1"
            android:textAlignment="center">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" Paired Grey Dress"
               android:layout_marginTop="30dp"
               android:textColor="#000000"
               android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" 2, 500.00"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Free Shipping"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="15dp"/>
        </LinearLayout>

        <!-- empty -->
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <!-- layout3 empty-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal" />

    <!-- layout4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"></LinearLayout>
        <!-- button3 -->
        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFF"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="  Color                  : Grey "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  Size                    : M "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  Quantity             : 1 "
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"></LinearLayout>

    </LinearLayout>

    <!-- layout3 empty-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="horizontal" />

    <!-- layout4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:layout_width="393dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFF"
            android:weightSum="1">

            <TextView
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Sub Total           : LKR 2, 500.00 "/>

            <TextView
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Shipping Fee      : LKR 0.00 "/>

            <TextView
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Total                   : LKR 2, 500.00 "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>
        <!-- button1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="1">

            <Button
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:id="@+id/btnP5"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3333ff" />
        </LinearLayout>

        <!-- empty -->
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>
        <!-- button2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="1">

            <Button
                android:id="@+id/btnP6"
                android:text="Continue"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3333ff"/>
        </LinearLayout>

        <!-- empty -->
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>


</LinearLayout>